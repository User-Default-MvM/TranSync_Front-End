/static/js/*.chunk.js    /static/js/:splat    200
/admin/static/js/*.chunk.js    /admin/static/js/:splat    200

# Admin JavaScript files - serve with correct MIME type (IMPORTANT: Before SPA fallback)
/admin/static/js/*.js    /admin/static/js/:splat    200

